Proceso ejercicio14
	//definir variables
	Definir radio_circunferencia, longitud_circunferencia Como Real;
	// se ingresa el valor
	Escribir "Ingresa el radio de la circunferencia";
	Leer radio_circunferencia;
	// proceso
	longitud_circunferencia <- 2 * PI * radio_circunferencia;
	// se imprime en consola
	Escribir "La longitud de la circunferencia es: ", longitud_circunferencia;
FinProceso
